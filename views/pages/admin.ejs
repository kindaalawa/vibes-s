<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Admin dashboard</title>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Product Management</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <a href="/products/add-product" class="btn btn-sm btn-outline-secondary">+ New Product</a>
                </div>
            </div>
        </div>
        <% errors.forEach(element => { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= element.message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% }) %>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th scope="col">Product Name</th>
                        <th scope="col">Product IMG</th>
                        <th scope="col">Description</th>
                        <th scope="col">Information</th>
                        <th scope="col">Price</th>
                        <th scope="col">Category ID</th>
                        <th scope="col" class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr class="align-middle">
                            <td><%= product.product_Name %></td>
                            <td><%= product.product_IMG %></td>
                            <td><%= product.product_Description %></td>
                            <td><%= product.product_Info %></td>
                            <td>$<%= product.product_Price %></td>
                            <td><%= product.category_ID %></td>
                            <td class="text-end">
                                <div class="d-flex flex-row justify-content-end gap-2">
                                    <a href="/products/view/<%= product.product_ID %>" type="button" class="btn btn-primary btn-small">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="/products/edit/<%= product.product_ID %>" type="button" class="btn btn-warning btn-small">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form action="/products/delete/<%= product.product_ID %>" method="POST" class="position-relative">
                                        <button type="submit" class="btn btn-danger btn-small">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
